<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#eee"
    android:layout_gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/upload_fsm_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload FSM to Database"
                android:id="@+id/edit_notification_title_bar"
                android:textColor="#222"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:typeface="sans"
                android:layout_height="wrap_content"
                android:text="FSM Title"
                android:textColor="#474B4F"
                />

            <EditText
                android:layout_marginTop="3dp"
                android:typeface="sans"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/fsm_title_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp"/>

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:typeface="sans"
                android:layout_height="wrap_content"
                android:text="FSM Content"
                android:textColor="#474B4F"
                />

            <EditText
                android:layout_marginTop="3dp"
                android:typeface="sans"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/fsm_content_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp"/>

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:typeface="sans"
                android:layout_height="wrap_content"
                android:text="Teacher/s"
                android:textColor="#474B4F"
                />

            <EditText
                android:layout_marginTop="3dp"
                android:typeface="sans"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/fsm_teacher_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="5dp"/>

            <Button
                android:typeface="sans"
                android:background="@drawable/gradient_main"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="visible"
                android:id="@+id/upload_fsm_button"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Upload FSM" />

            <ProgressBar
                android:id="@+id/progress_bar_view"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/fsm_uploaded_success">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/success_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/check"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/success_image"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="FSM Uploaded!"
                    android:textColor="#222"
                    android:id="@+id/RAND_1"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_below="@+id/RAND_1"
                    android:typeface="sans"
                    android:background="@drawable/gradient_button_main"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:id="@+id/continue_button_fsm_uploaded"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Continue" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>